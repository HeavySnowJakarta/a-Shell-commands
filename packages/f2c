#! /bin/sh
# download command:
curl -L https://github.com/holzschu/a-Shell-commands/releases/download/0.1/f2c --output-dir ~/Documents/bin --create-dir
chmod +x ~/Documents/bin/f2c
curl -L https://github.com/holzschu/a-Shell-commands/releases/download/0.1/libf2c.a --output-dir ~/Library/lib/wasm32-wasi --create-dir
# download man page
curl -l https://raw.githubusercontent.com/holzschu/a-Shell-commands/master/man/man1/f2c.1 --output-dir ~/library/man/man1 --create-dir
# refresh man database
mandocdb ~/Library/man
# download uninstall information:
curl -L https://raw.githubusercontent.com/holzschu/a-Shell-commands/master/uninstall/f2c --output-dir ~/Documents/.pkg --create-dir
