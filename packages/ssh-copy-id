#! /bin/sh

echo Installing dirname and expr:

curl -L https://github.com/holzschu/a-Shell-commands/releases/download/0.1/dirname -o ~/Documents/bin/dirname --create-dirs --silent
chmod +x ~/Documents/bin/dirname
curl -L https://raw.githubusercontent.com/holzschu/a-Shell-commands/master/man/man1/dirname.1 -o ~/Library/man/man1/dirname.1 --create-dirs --silent

curl -L https://github.com/holzschu/a-Shell-commands/releases/download/0.1/expr -o ~/Documents/bin/expr --create-dirs --silent
chmod +x ~/Documents/bin/expr
curl -L https://raw.githubusercontent.com/holzschu/a-Shell-commands/master/man/man1/expr.1 -o ~/Library/man/man1/expr.1 --create-dirs --silent


# Default install file for packages (here ssh-copy-id):

packagename=${0##*/}

# download command:
curl -L https://github.com/holzschu/a-Shell-commands/releases/download/0.1/$packagename -o ~/Documents/bin/$packagename --create-dirs --silent
chmod +x ~/Documents/bin/$packagename
# download man page
curl -L https://raw.githubusercontent.com/holzschu/a-Shell-commands/master/man/man1/$packagename.1 -o ~/Library/man/man1/$packagename.1 --create-dirs --silent
# refresh man database
mandocdb ~/Library/man
# download uninstall information:
curl -L https://raw.githubusercontent.com/holzschu/a-Shell-commands/master/uninstall/$packagename -o ~/Documents/.pkg/$packagename --create-dirs --silent

