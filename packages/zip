#! /bin/sh
for command in funzip unzip unzipsfx zip zipcloak zipnote zipsplit
do
    # download command:
    curl -L https://github.com/holzschu/a-Shell-commands/releases/download/0.1/$command.wasm --output-dir ~/Documents/bin --create-dir
	chmod +x ~/Documents/bin/$command.wasm
    # download man page
    curl -l https://github.com/holzschu/a-shell-commands/blob/master/man/man1/$command.1 --output-dir ~/library/man/man1 --create-dir
done
# refresh man database
mandocdb ~/Library/man
# download uninstall information:
curl -L https://github.com/holzschu/a-Shell-commands/blob/master/uninstall/zip --output-dir ~/Documents/.pkg --create-dir
